<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_activity_container"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.trukk.customviews.TextViewOpenSans
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/lyt_register_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_register">

            <com.trukk.customviews.EditTextOpenSans
                android:id="@+id/edt_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/edt_bg"
                android:hint="@string/mobile_number"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:inputType="phone"
                />

            <com.trukk.customviews.EditTextOpenSans
                android:id="@+id/edt_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edt_family_name"
                app:layout_constraintTop_toBottomOf="@+id/edt_mobile_no"
                android:background="@drawable/edt_bg"
                android:hint="@string/first_name"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_user_24dp"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:inputType="text"
                android:nextFocusLeft="@id/edt_family_name"
                />

            <com.trukk.customviews.EditTextOpenSans
                android:id="@+id/edt_family_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/edt_first_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_mobile_no"
                android:background="@drawable/edt_bg"
                android:hint="@string/family_name"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_user_24dp"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:inputType="text"
                android:nextFocusDown="@id/edt_email_id"
                />

            <com.trukk.customviews.EditTextOpenSans
                android:id="@+id/edt_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_family_name"
                android:background="@drawable/edt_bg"
                android:hint="@string/email"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                />

            <com.trukk.customviews.EditTextOpenSans
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_email_id"
                android:background="@drawable/edt_bg"
                android:hint="@string/password"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:inputType="textPassword"
                />

            <com.trukk.customviews.ButtonOpenSans
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:background="@drawable/btn_orange_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_password"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorWhite"
                />

            <com.trukk.customviews.TextViewOpenSans
                android:id="@+id/tv_you_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_signup"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/lyt_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_register"
            android:paddingBottom="20dp">
            <com.trukk.customviews.TextViewOpenSans
                android:id="@+id/tv_otp_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="@string/otp_sent_to_your_mobile_number"/>

            <com.trukk.customviews.EditTextOpenSans
                android:id="@+id/edt_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_otp_message"
                android:background="@drawable/edt_bg"
                android:hint="@string/otp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:inputType="number"
                />
            <com.trukk.customviews.ButtonOpenSans
                android:id="@+id/btn_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="@drawable/btn_orange_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_otp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorWhite"
                />
            <com.trukk.customviews.TextViewOpenSans
                android:id="@+id/tv_send_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_otp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:text="@string/send_otp_again"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>