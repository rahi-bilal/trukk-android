<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/lyt_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintBottom_toTopOf="@id/lyt_map_container"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:elevation="3dp">
        <com.trukk.customviews.EditTextOpenSans
            android:id="@+id/edt_search_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="16dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:hint="@string/search_here"/>
        <ImageView
            android:id="@+id/img_clear_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_close_black_24dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/img_search_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_forward_white_24dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_search_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toBottomOf="@id/lyt_search_container"
        android:background="@android:color/white"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="3dp"
        />

    <RelativeLayout
        android:id="@+id/lyt_map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@id/lyt_search_container"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintBottom_toBottomOf="parent">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />
        <View
            android:id="@+id/lyt_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:layout_gravity="center_horizontal"
            android:layout_above="@id/lyt_center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_location_marker"/>
    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/lyt_done_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:background="@android:color/transparent">
        <com.trukk.customviews.ButtonOpenSans
            android:id="@+id/btn_set_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/btn_blue_bg"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/setLocation"/>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
